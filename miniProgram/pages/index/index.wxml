<basics wx:if="{{PageCur=='basics'}}"></basics>
<shoppingcart wx:if="{{PageCur=='shoppingcart'}}"></shoppingcart>
<about wx:if="{{PageCur=='about'}}"></about>
<category wx:if="{{PageCur=='category'}}"></category>
<view class="cu-bar tabbar bg-white shadow foot">
  <view class="action" bindtap="NavChange" data-cur="basics">
    <view class='cuIcon-cu-image'>
      <image src="/images/tabbar/basics{{PageCur=='basics'?'_cur':''}}.png"></image>
    </view>
    <view class="{{PageCur=='basics'?'text-green':'text-gray'}}">首页</view>
  </view>
  <view class="action" bindtap="NavChange" data-cur="category">
    <view class='cuIcon-cu-image'>
      <image src="/images/tabbar/component{{PageCur=='category'?'_cur':''}}.png"></image>
    </view>
    <view class="{{PageCur=='component'?'text-green':'text-gray'}}">分类</view>
  </view>
  <view class="action" bindtap="NavChange" data-cur="shoppingcart">
    <view class='cuIcon-cu-image'>
      <image src="/images/tabbar/shoppingcart{{PageCur=='shoppingcart'?'_cur':''}}.png"></image>
    </view>
    <view class="{{PageCur=='shoppingcart'?'text-green':'text-gray'}}">购物车</view>
  </view>
  <view class="action" bindtap="NavChange" data-cur="about">
    <view class='cuIcon-cu-image'>
      <image src="/images/tabbar/about{{PageCur=='about'?'_cur':''}}.png"></image>
    </view>
    <view class="{{PageCur=='about'?'text-green':'text-gray'}}">关于</view>
  </view>
</view>